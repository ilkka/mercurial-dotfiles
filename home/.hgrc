[extensions]
# preinstalled with mercurial
mq =
bookmarks =
bugzilla =
children =
churn =
color =
graphlog =
hgk =
highlight =
pager =
parentrevspec =
progress =
purge =
rebase =
record =
transplant =
zeroconf =
# custom stuff in my hgext dir
prompt = ~/.hgext/hg-prompt/prompt.py
# This causes endless grief because of the dulwich requirement, gonna disable
#hggit = ~/.hgext/hg-git/hggit
shelve =

[merge-tools]
threesome.executable = gvim
threesome.args = -f $base $local $other $output -c 'ThreesomeInit'
threesome.premerge = keep
threesome.priority = 1

[pager]
pager = LESS='FSRX' less
